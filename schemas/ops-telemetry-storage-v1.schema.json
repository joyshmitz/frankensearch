{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://frankensearch.dev/schemas/ops-telemetry-storage-v1.schema.json",
  "title": "FrankenSearch Ops Telemetry Storage Contract v1",
  "type": "object",
  "required": [
    "version",
    "database",
    "tables",
    "indexes",
    "dedup_keys",
    "migration_strategy",
    "query_patterns"
  ],
  "properties": {
    "version": {
      "const": "v1"
    },
    "database": {
      "const": "frankensearch-ops.db"
    },
    "tables": {
      "type": "array",
      "minItems": 9,
      "items": {
        "$ref": "#/$defs/table"
      }
    },
    "indexes": {
      "type": "array",
      "minItems": 8,
      "items": {
        "$ref": "#/$defs/index"
      }
    },
    "dedup_keys": {
      "type": "array",
      "minItems": 6,
      "items": {
        "$ref": "#/$defs/dedup_key"
      }
    },
    "migration_strategy": {
      "$ref": "#/$defs/migration_strategy"
    },
    "query_patterns": {
      "type": "array",
      "minItems": 3,
      "items": {
        "$ref": "#/$defs/query_pattern"
      }
    }
  },
  "$defs": {
    "table": {
      "type": "object",
      "required": [
        "name",
        "purpose",
        "primary_key"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "purpose": {
          "type": "string"
        },
        "primary_key": {
          "type": "string"
        },
        "foreign_keys": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "index": {
      "type": "object",
      "required": [
        "name",
        "table",
        "columns",
        "query_goal"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "table": {
          "type": "string"
        },
        "columns": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "query_goal": {
          "type": "string"
        },
        "partial_predicate": {
          "type": "string"
        }
      }
    },
    "dedup_key": {
      "type": "object",
      "required": [
        "table",
        "key"
      ],
      "properties": {
        "table": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "strategy": {
          "type": "string",
          "enum": [
            "insert_or_ignore",
            "upsert"
          ]
        }
      }
    },
    "migration_strategy": {
      "type": "object",
      "required": [
        "tracking_table",
        "forward_only_in_production",
        "reversible_in_dev_test",
        "checksum_validation"
      ],
      "properties": {
        "tracking_table": {
          "const": "ops_schema_migrations"
        },
        "forward_only_in_production": {
          "const": true
        },
        "reversible_in_dev_test": {
          "const": true
        },
        "checksum_validation": {
          "const": true
        }
      }
    },
    "query_pattern": {
      "type": "object",
      "required": [
        "name",
        "filters",
        "sort"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "filters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sort": {
          "type": "string"
        },
        "limit": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}
