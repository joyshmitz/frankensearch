{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://frankensearch.dev/schemas/control-plane-error-v1.schema.json",
  "title": "frankensearch Control Plane Error Contract v1",
  "oneOf": [
    {
      "$ref": "#/$defs/errorCatalog"
    },
    {
      "$ref": "#/$defs/errorEvent"
    },
    {
      "$ref": "#/$defs/errorAggregation"
    }
  ],
  "$defs": {
    "ulid": {
      "type": "string",
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
    },
    "errorType": {
      "type": "string",
      "enum": [
        "DiscoveryFailed",
        "StorageError",
        "StreamDisconnected",
        "SchemaMismatch",
        "IngestionOverflow",
        "AttributionFailed",
        "TelemetryGap"
      ]
    },
    "severityClass": {
      "type": "string",
      "enum": [
        "Fatal",
        "Degraded",
        "Transient"
      ]
    },
    "uiSurface": {
      "type": "string",
      "enum": [
        "toast",
        "status_badge",
        "full_screen_panel"
      ]
    },
    "reasonCode": {
      "type": "string",
      "pattern": "^[a-z0-9]+\\.[a-z0-9_]+\\.[a-z0-9_]+$"
    },
    "window": {
      "type": "string",
      "enum": [
        "1m",
        "15m",
        "1h"
      ]
    },
    "errorCatalog": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "v",
        "variants"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "const": "control_plane_error_catalog"
        },
        "v": {
          "type": "integer",
          "const": 1
        },
        "variants": {
          "type": "array",
          "minItems": 7,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "error_type",
              "default_severity",
              "ui_surface",
              "status_badge",
              "recovery_guidance"
            ],
            "properties": {
              "error_type": {
                "$ref": "#/$defs/errorType"
              },
              "default_severity": {
                "$ref": "#/$defs/severityClass"
              },
              "ui_surface": {
                "$ref": "#/$defs/uiSurface"
              },
              "status_badge": {
                "type": "string",
                "minLength": 1
              },
              "recovery_guidance": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "errorEvent": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "v",
        "ts",
        "event_id",
        "error_type",
        "severity_class",
        "reason_code",
        "message",
        "project_key",
        "correlation",
        "retry_count",
        "recoverable",
        "ui_mapping",
        "recovery"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "const": "control_plane_error_event"
        },
        "v": {
          "type": "integer",
          "const": 1
        },
        "ts": {
          "type": "string",
          "format": "date-time"
        },
        "event_id": {
          "$ref": "#/$defs/ulid"
        },
        "error_type": {
          "$ref": "#/$defs/errorType"
        },
        "severity_class": {
          "$ref": "#/$defs/severityClass"
        },
        "reason_code": {
          "$ref": "#/$defs/reasonCode"
        },
        "message": {
          "type": "string",
          "minLength": 1
        },
        "project_key": {
          "type": "string",
          "minLength": 1
        },
        "instance_id": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
        },
        "correlation": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "root_request_id",
            "parent_event_id"
          ],
          "properties": {
            "root_request_id": {
              "type": [
                "string",
                "null"
              ],
              "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
            },
            "parent_event_id": {
              "type": [
                "string",
                "null"
              ],
              "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
            }
          }
        },
        "retry_count": {
          "type": "integer",
          "minimum": 0
        },
        "recoverable": {
          "type": "boolean"
        },
        "ui_mapping": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "surface",
            "status_badge",
            "escalation_after_count"
          ],
          "properties": {
            "surface": {
              "$ref": "#/$defs/uiSurface"
            },
            "status_badge": {
              "type": "string",
              "minLength": 1
            },
            "escalation_after_count": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "recovery": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "retry_policy",
            "operator_steps",
            "suggested_commands"
          ],
          "properties": {
            "retry_policy": {
              "type": "string",
              "enum": [
                "none",
                "immediate",
                "exponential_backoff"
              ]
            },
            "operator_steps": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "suggested_commands": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "errorAggregation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "v",
        "window",
        "error_type",
        "project_key",
        "reason_code",
        "occurrences",
        "first_seen_ts",
        "last_seen_ts",
        "escalated",
        "aggregation_reason_code"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "const": "control_plane_error_aggregation"
        },
        "v": {
          "type": "integer",
          "const": 1
        },
        "window": {
          "$ref": "#/$defs/window"
        },
        "error_type": {
          "$ref": "#/$defs/errorType"
        },
        "project_key": {
          "type": "string",
          "minLength": 1
        },
        "instance_id": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
        },
        "reason_code": {
          "$ref": "#/$defs/reasonCode"
        },
        "occurrences": {
          "type": "integer",
          "minimum": 1
        },
        "first_seen_ts": {
          "type": "string",
          "format": "date-time"
        },
        "last_seen_ts": {
          "type": "string",
          "format": "date-time"
        },
        "escalated": {
          "type": "boolean"
        },
        "aggregation_reason_code": {
          "$ref": "#/$defs/reasonCode"
        }
      }
    }
  }
}
